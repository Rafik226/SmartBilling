{
  "info": {
    "_postman_id": "smartbilling-collection-1",
    "name": "SmartBilling API - Dev",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{admin_username}}\",\n  \"password\": \"{{admin_password}}\"\n}"
        },
        "url": "{{base_url}}/api/auth/login"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if(json && json.token){",
              "    pm.environment.set('jwt', json.token);",
              "    console.log('JWT set');",
              "} else {",
              "    console.log('No token in response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Clients - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"ACME Corp\",\n  \"email\": \"billing@acme.local\",\n  \"phone\": \"+33123456789\",\n  \"address\": \"1 Rue Exemple, Paris\"\n}"
        },
        "url": "{{base_url}}/api/clients"
      },
      "response": []
    },
    {
      "name": "Clients - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": "{{base_url}}/api/clients"
      },
      "response": []
    },
    {
      "name": "Invoices - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clientEmail\": \"billing@acme.local\",\n  \"lines\": [\n    { \"description\": \"Service A\", \"unitPrice\": 100.0, \"quantity\": 1 },\n    { \"description\": \"Service B\", \"unitPrice\": 50.0, \"quantity\": 2 }\n  ]\n}"
        },
        "url": "{{base_url}}/api/invoices"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if(json && json.id){",
              "    pm.environment.set('invoiceId', json.id);",
              "    console.log('invoiceId set:', json.id);",
              "} else {",
              "    console.log('No id in invoice response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "LineItems - Add",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Extra line\",\n  \"unitPrice\": 30.0,\n  \"quantity\": 1\n}"
        },
        "url": "{{base_url}}/api/invoices/{{invoiceId}}/items"
      },
      "response": []
    },
    {
      "name": "Payments - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 150.0,\n  \"method\": \"CARD\",\n  \"reference\": \"PAY-001\"\n}"
        },
        "url": "{{base_url}}/api/invoices/{{invoiceId}}/payments"
      },
      "response": []
    }
  ]
}
